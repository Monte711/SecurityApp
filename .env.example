# Environment Configuration Template

# OpenSearch Configuration
OPENSEARCH_URL=http://localhost:9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=admin
OPENSEARCH_INDEX_PREFIX=cybersec

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_STREAM_NAME=telemetry-events

# MISP Threat Intelligence Platform
MISP_URL=http://localhost:8080
MISP_API_KEY=your_misp_api_key_here
MISP_VERIFY_SSL=false
MISP_ORG_ID=1

# OpenVAS Vulnerability Scanner
OPENVAS_HOST=localhost
OPENVAS_PORT=9392
OPENVAS_USERNAME=admin
OPENVAS_PASSWORD=admin
OPENVAS_TIMEOUT=300

# ClamAV Antivirus
CLAMAV_HOST=localhost
CLAMAV_PORT=3310
CLAMAV_TIMEOUT=30

# Ingest API Configuration
INGEST_API_HOST=0.0.0.0
INGEST_API_PORT=8000
INGEST_API_KEY=your_secure_api_key_here_32_chars
INGEST_RATE_LIMIT=1000
INGEST_BATCH_SIZE=100

# Agent Configuration
AGENT_ID=agent-001
AGENT_COLLECTION_PROFILE=standard
AGENT_SEND_INTERVAL=30
AGENT_BUFFER_SIZE=1000
AGENT_RETRY_ATTEMPTS=3

# Security Settings
TLS_ENABLED=false
TLS_CERT_PATH=/opt/certs/server.crt
TLS_KEY_PATH=/opt/certs/server.key
TLS_CA_PATH=/opt/certs/ca.crt

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/cybersec/app.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Database Settings
DB_RETENTION_DAYS=90
DB_INDEX_ROTATION=daily
DB_SHARD_COUNT=1
DB_REPLICA_COUNT=0

# SOAR Playbook Configuration
SOAR_APPROVAL_REQUIRED=true
SOAR_TIMEOUT=3600
SOAR_NOTIFICATION_EMAIL=admin@company.com

# ML Module Configuration
ML_MODEL_PATH=/opt/models/
ML_TRAINING_INTERVAL=86400
ML_ANOMALY_THRESHOLD=0.8
ML_BATCH_SIZE=1000

# EDR/AV Integration
EDR_QUARANTINE_ENABLED=true
EDR_QUARANTINE_PATH=/opt/quarantine/
EDR_HASH_UPLOAD_ENABLED=false
EDR_YARA_RULES_PATH=/opt/yara/rules/

# Vulnerability Scanner Settings
VULN_SCAN_SCHEDULE=0 2 * * *
VULN_SCAN_PROFILES=Full and fast
VULN_AUTO_IMPORT=true
VULN_REPORT_FORMAT=json

# UI Dashboard Configuration
UI_PORT=3000
UI_SESSION_SECRET=your_session_secret_here
UI_CSRF_PROTECTION=true

# Monitoring & Metrics
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Feature Flags
FEATURE_BINARY_UPLOAD=false
FEATURE_HASH_REPUTATION=true
FEATURE_AUTO_QUARANTINE=false
FEATURE_ML_DETECTION=false

# Development Settings (set to false in production)
DEBUG_MODE=true
MOCK_EXTERNAL_SERVICES=false
DISABLE_AUTH=false
